		"devdoc": {
			"details": "Track and manage internship tasks and progress on blockchain",
			"kind": "dev",
			"methods": {
				"constructor": {
					"details": "Constructor sets deployer as mentor"
				},
				"createTask(string,string,uint256,address,uint256)": {
					"details": "Create a new task (mentor only)",
					"params": {
						"_assignedTo": "Intern's address",
						"_description": "Task description",
						"_points": "Points for completion",
						"_title": "Task title",
						"_weekNumber": "Week number (1-12)"
					}
				},
				"getCompletionPercentage(address)": {
					"details": "Get completion percentage",
					"params": {
						"_intern": "The intern's address"
					},
					"returns": {
						"_0": "uint256 Percentage (0-100)"
					}
				},
				"getInternTasks(address)": {
					"details": "Get all tasks for an intern",
					"params": {
						"_intern": "The intern's address"
					},
					"returns": {
						"_0": "uint256[] Array of task IDs"
					}
				},
				"getLeaderboard()": {
					"details": "Get leaderboard (top 10 interns by points)",
					"returns": {
						"addresses": "Array of intern addresses",
						"points": "Array of points"
					}
				},
				"registerIntern(string,string)": {
					"details": "Register a new intern",
					"params": {
						"_email": "Intern's email",
						"_name": "Intern's name"
					}
				},
				"startTask(uint256)": {
					"details": "Start working on a task",
					"params": {
						"_taskId": "The task ID"
					}
				},
				"submitTask(uint256,string)": {
					"details": "Submit a completed task",
					"params": {
						"_submissionLink": "Link to submission (GitHub, etc.)",
						"_taskId": "The task ID"
					}
				},
				"verifyTask(uint256,bool,string)": {
					"details": "Verify a submitted task (mentor only)",
					"params": {
						"_approved": "True to approve, false to request revision",
						"_feedback": "Feedback from mentor",
						"_taskId": "The task ID"
					}
				}
			},
